  <body>

    {{#if notLogin}}{{else}}
      <nav
        class='navbar navbar-expand-md d-flex justify-content-end'
        style='background-color: #b8d9f0; '
      >

        <a
          class='nav-link btn btn-outline-secondary mx-5 my-2'
          href='/login/logout'
          style='color:black'
        >Logout</a>
      </nav>
    {{/if}}

    <body>

      <main class='container'>
        {{{body}}}

